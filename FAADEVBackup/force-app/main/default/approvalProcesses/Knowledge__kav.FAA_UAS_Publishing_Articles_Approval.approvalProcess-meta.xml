<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>FAA_Support_Center_Analyst</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Title</field>
        <field>Owner</field>
        <field>FAA_UAS_Article_Link__c</field>
        <field>ArticleCreatedDate</field>
        <field>Question__c</field>
        <field>Answer__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>FAA_Content_Manager</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approve Support Center Analysts</label>
        <name>Approve_Support_Center_Analysts</name>
    </approvalStep>
    <description>Approval process to publish knowledge articles</description>
    <emailTemplate>FAA_UAS_Email_Templates/FAA_Knowledge_Submit_Approval_Html_template</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Knowledge__kav.RecordType</field>
            <operation>equals</operation>
            <value>FAA Articles</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>FAA_Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>FAA_UAS_Publish_Article</name>
            <type>KnowledgePublish</type>
        </action>
        <action>
            <name>Set_Locked_to_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>FAA_Rejection_Email</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Locked_to_False</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Set_Locked_to_True</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>FAA UAS Publishing Articles Approval</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>FAA_Reset_Initial_Submitter</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Set_Locked_to_False</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
